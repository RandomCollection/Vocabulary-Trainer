Screen:

    input: text

    BoxLayout:

        orientation: "vertical"

        MDToolbar:
            title: "Menu"
            left_action_items: [["menu", lambda x: navigation_drawer.set_state("open")]]

        Widget:

    MDNavigationLayout:

        ScreenManager:

            id: screen_manager

            Screen:

                name: "home"

                MDLabel:
                    text: app.label_home
                    id: home
                    markup: True
                    font_style: "H5"
                    halign: "center"
                    valign: "center"      

        MDNavigationDrawer:
            id: navigation_drawer
            orientation: "vertical"
            padding: "12dp", "12dp", "12dp", "0dp"
            spacing: "5dp"

            AnchorLayout:
                anchor_x: "left"
                size_hint_y: None
                height: img.height

                Image:
                    id: img
                    size_hint: None, None
                    size: "56dp", "56dp"
                    source: "img.png"

            MDLabel:
                text: "Vocabulary Trainer"
                font_style: "Button"
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                text: "RandomCollection"
                font_style: "Caption"
                size_hint_y: None
                height: self.texture_size[1]

            MDList:

                OneLineAvatarListItem:
                    text: "Home"
                    on_press:
                        navigation_drawer.set_state("close")
                        screen_manager.current = "home"
                    IconLeftWidget:
                        icon: "home"

            Widget:
